{
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "allowJs": true,
    "outDir": "lib",
    "rootDir": "src",
    "target": "es2022",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", "scripts"]
}
