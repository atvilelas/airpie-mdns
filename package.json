{
  "name": "@airpie/mdns",
  "version": "0.0.1",
  "description": "MDNS Protocol for AirPie",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "author": "Andre Vilela <atvilelas@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn build:clean && yarn compile:types && yarn dev && node --inspect lib/index.js",
    "dev": "webpack --mode development",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "compile:types": "tsc -b ./tsconfig-types.json",
    "build:clean": "rm -rf ./lib",
    "build": "npm-run-all build:clean compile:types && webpack --mode production"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.10.1",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "dependencies": {
    "@airpie/common-events": "^0.0.2",
    "@airpie/common-network": "^0.0.1",
    "@airpie/common-store": "^0.0.2",
    "dgram": "^1.0.1",
    "os": "^0.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atvilelas/airpie-mdns.git"
  },
  "bugs": {
    "url": "https://github.com/atvilelas/airpie-mdns/issues"
  },
